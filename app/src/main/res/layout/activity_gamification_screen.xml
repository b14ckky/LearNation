<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">



  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:id="@+id/const_std"
      android:background="@drawable/semicircle"
      tools:context=".MainActivity">
    <Button
        android:id="@+id/back_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="152dp"
        android:transitionName="back_bt"
        android:src="@drawable/l2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <ScrollView
      android:id="@+id/ScrollView01"
      android:layout_width="match_parent"
      android:layout_height="1264dp"
      android:layout_below="@id/const_std"
      android:layout_marginTop="32dp"
      android:orientation="vertical"
      tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


